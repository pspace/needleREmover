<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="space.polylog.owasp.needleremover.SSLActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ssl_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ssl_active"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sslStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/no"
                android:textAlignment="textEnd"
                android:textSize="24sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/valid_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cert_valid"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/validStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no"
                android:textAlignment="textEnd"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="34dp">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="39dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/certIDLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/certificate_id" />

            <TextView
                android:id="@+id/certID"
                android:layout_width="182dp"
                android:layout_height="43dp"
                android:text="@string/textview"
                android:textAlignment="textEnd" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:id="@+id/url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textUri"
                android:singleLine="true"
                android:labelFor="@+id/url"
                android:text="@string/https_owasp_org" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/get"
                android:onClick="onGetClick"
                />
        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>
